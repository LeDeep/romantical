<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<ul class="dl-horizontal">
  <%= image_tag @profile.avatar(:small) %>
  <li><strong>Name:</strong></dt> <%= @profile.name %></li>
  <li><strong>Points:</strong></dt> <%= @profile.points %></li>
  <li><strong>Gender:</strong></dt> <%= @profile.gender %></li>
  <li><strong>Age:</strong></dt> <%= @profile.age %></li>
  <li><strong>City:</strong></dt> <%= @profile.city %></li>
  <li><strong>State:</strong></dt> <%= @profile.state %></li>


</ul>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

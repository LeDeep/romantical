<!DOCTYPE html>
<html>
<head>
    <title>Romantical</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
</head>
<body>
  <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1&appId=518238461555137";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <div class="nav-collapse">

          
          <%= link_to "Romantical", root_path, class: "brand" %>
          <div class="nav-collapse"  >

            <ul class="nav pull-left" >
                <li><%= link_to "Where couples come to keep the romance", root_path %></li>
            </ul>

              <ul class="nav pull-right" >
                  <% if user_signed_in? %>
              <li class='dropdown'>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><b><%= current_user.name %></b> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'View profile', profile_path(current_user) %></li>
              <li><%= link_to 'Edit profile', edit_profile_path(current_user) %></li>
              <li><%= link_to 'Edit account', edit_user_registration_path %></li>
              <li><%= link_to 'Log out', destroy_user_session_path, :method => :delete %></li>

              </ul>
              </li>  

            <% else %>
              <li><%= link_to "Create an Account", new_user_registration_path %></li>
              <li><%= link_to "Sign In", new_user_session_path %></li>              
              <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li>
                  
                  
                    <% end %>
                </ul>  
              </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <%= msg  %>
        </div>
      <% end %>

      
        <%= yield %>
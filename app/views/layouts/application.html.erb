<!DOCTYPE html>
<html>
<head>
    <title>Romantical</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
</head>
<body>
  
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <div class="nav-collapse">

          
          <%= link_to "Romantical", root_path, class: "brand" %>
          <div class="nav-collapse"  >

            <ul class="nav pull-left" >
                <li><%= link_to "Where couples come to keep the romance", root_path %></li>
            </ul>

              <ul class="nav pull-right" >
                  <% if user_signed_in? %>
              <li class='dropdown'>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><b><%= current_user.username %></b> <span class="caret"></span></a>
                <ul class="dropdown-menu"> 
                  <li><%= link_to 'View profile', profile_path(current_user) %></li>
                  <li><%= link_to 'Edit profile', edit_profile_path(current_user) %></li>
                  <li><%= link_to 'Edit account', edit_user_registration_path %></li>
                  <li><%= link_to 'Log out', destroy_user_session_path, :method => :delete %></li>
                </ul>
              </li>
              <li><%= link_to 'Log out', destroy_user_session_path, :method => :delete %></li>
              <li><%= link_to 'View profile', profile_path(current_user) %></li>
              <li><%= link_to 'Edit profile', edit_profile_path(current_user) %></li>
              <li><%= link_to 'Edit account', edit_user_registration_path %></li>

            <% else %>
                    <li><%= link_to "Sign in", new_user_session_path %></li>
                    <li><%= link_to "Create an Account", new_user_registration_path %></li>
                    <% end %>
                </ul>  
              </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <%= msg  %>
        </div>
      <% end %>

      
        <%= yield %>
       

